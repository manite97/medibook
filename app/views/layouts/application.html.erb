<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Med Book" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="flash flash-notice" data-controller="flash">
        <button type="button" class="flash-close" aria-label="Dismiss" data-action="click->flash#close">×</button>
        <%= flash[:notice] %>
      </div>
    <% end %>
    
    <% if flash[:alert] %>
      <div class="flash flash-alert" data-controller="flash">
        <button type="button" class="flash-close" aria-label="Dismiss" data-action="click->flash#close">×</button>
        <%= flash[:alert] %>
      </div>
    <% end %>

    <nav class="main-nav">
      <div class="nav-content">
        <%= link_to "MedBook", root_path, class: "nav-logo" %>
        <div class="nav-links">
          <% if logged_in? %>
            <span class="welcome-user">Welcome, <%= current_user.first_name %></span>
            <%= button_to "Log Out", logout_path, method: :delete, class: "nav-button" %>
          <% else %>
            <%= link_to "Login", login_path, class: "nav-button" %>
            <%= link_to "Sign Up", new_user_path, class: "nav-button primary" %>
          <% end %>
        </div>
      </div>
    </nav>

    <%= yield %>
    <%= render 'layouts/footer' %>
  </body>
</html>
