<% content_for :title, "Sign In to MedBook" %>

<div class="registration-container">
  <div class="registration-box">
    <div class="registration-header">
      <h1>Welcome Back</h1>
      <p>Sign in to continue to MedBook</p>
    </div>

    <%= form_with(scope: :session, url: login_path, class: "registration-form") do |form| %>
      <% if flash[:alert] %>
        <div class="alert alert-danger" role="alert">
          <h4 class="alert-heading">Login failed</h4>
          <p class="mb-0"><%= flash[:alert] %></p>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :user_name, class: "form-label" %>
        <div class="input-group">
          <span class="input-group-text" aria-hidden="true">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><rect x="3" y="5" width="18" height="14" rx="2" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/><path d="M3 7l9 6 9-6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
          </span>
          <%= form.text_field :user_name, class: "form-control", placeholder: "Enter your email" %>
        </div>
      </div>

      <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <div class="input-group">
          <span class="input-group-text" aria-hidden="true">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><rect x="3" y="11" width="18" height="11" rx="2" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/><path d="M7 11V7a5 5 0 0 1 10 0v4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
          </span>
          <%= form.password_field :password, class: "form-control", placeholder: "Enter your password" %>
        </div>
      </div>

      <div class="d-grid">
        <%= form.submit "Sign In", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>

    <div class="registration-footer">
      Don't have an account? <%= link_to "Sign up", new_user_path, class: "login-link" %>
    </div>
  </div>
</div>
