<%= form_with(model: user, class: "registration-form") do |form| %>
  <% if user.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= pluralize(user.errors.count, "error") %> occurred:</h4>
      <ul class="mb-0">
        <% user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row g-3">
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :first_name, class: "form-label" %>
        <div class="input-group">
          <span class="input-group-text" aria-hidden="true">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><circle cx="12" cy="7" r="4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/><path d="M4 21v-1a6 6 0 0 1 6-6h4a6 6 0 0 1 6 6v1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
          </span>
          <%= form.text_field :first_name, class: "form-control", aria: {label: 'First name'} %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :last_name, class: "form-label" %>
        <div class="input-group">
          <span class="input-group-text" aria-hidden="true">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><circle cx="12" cy="7" r="4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/><path d="M4 21v-1a6 6 0 0 1 6-6h4a6 6 0 0 1 6 6v1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
          </span>
          <%= form.text_field :last_name, class: "form-control", aria: {label: 'Last name'} %>
        </div>
      </div>
    </div>

    <div class="col-12">
      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <div class="input-group">
          <span class="input-group-text" aria-hidden="true">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><rect x="3" y="5" width="18" height="14" rx="2" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/><path d="M3 7l9 6 9-6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
          </span>
          <%= form.email_field :email, class: "form-control", aria: {label: 'Email'} %>
        </div>
      </div>
    </div>

    <div class="col-12">
      <div class="mb-3">
        <%= form.label :phone_number, class: "form-label" %>
        <div class="input-group">
          <span class="input-group-text" aria-hidden="true">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M22 16.92V21a1 1 0 0 1-1 1 19.86 19.86 0 0 1-8.63-3.07A19.5 19.5 0 0 1 3.07 9.74 19.86 19.86 0 0 1 0 1.11 1 1 0 0 1 1 0h3.09a1 1 0 0 1 1 .75c.12.79.34 1.56.64 2.29a1 1 0 0 1-.23 1L4.27 6.09a16 16 0 0 0 6.05 6.05l1.27-1.27a1 1 0 0 1 1-.23c.73.3 1.5.52 2.29.64a1 1 0 0 1 .75 1V22z" stroke="currentColor" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/></svg>
          </span>
          <%= form.telephone_field :phone_number, class: "form-control", maxlength: 10, pattern: "[6-9][0-9]{9}", inputmode: "numeric", title: "Enter 10 digit Indian mobile number (starts with 6-9)", aria: {label: 'Phone number'} %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <div class="input-group">
          <span class="input-group-text" aria-hidden="true">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><rect x="3" y="11" width="18" height="11" rx="2" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/><path d="M7 11V7a5 5 0 0 1 10 0v4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
          </span>
          <%= form.password_field :password, class: "form-control", placeholder: "Minimum 6 characters", aria: {label: 'Password'} %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :password_confirmation, class: "form-label" %>
        <div class="input-group">
          <span class="input-group-text" aria-hidden="true">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><rect x="3" y="11" width="18" height="11" rx="2" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/><path d="M7 11V7a5 5 0 0 1 10 0v4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
          </span>
          <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your password", aria: {label: 'Confirm password'} %>
        </div>
      </div>
    </div>

    <div class="col-12">
      <div class="d-grid mt-2">
        <%= form.submit "Create Account", class: "btn btn-primary btn-lg" %>
      </div>
    </div>
  </div>
<% end %>
